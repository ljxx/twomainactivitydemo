<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px50"
    android:background="@color/white_bg"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"/>

    <RadioGroup
        android:id="@+id/mRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/mRBHome"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/mall_footer_bar_radio"
            android:drawableTop="@drawable/mall_home_bg"
            android:text="寻宝"
            />

        <RadioButton
            android:id="@+id/mRBMap"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/mall_footer_bar_radio"
            android:drawableTop="@drawable/mall_category_bg"
            android:text="订阅"
            />

        <RadioButton
            android:id="@+id/mRBCenter"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/mall_footer_bar_radio"
            android:drawableTop="@drawable/mall_cart_bg"
            android:text="交易"
            />

        <RadioButton
            android:id="@+id/mRBFind"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/mall_footer_bar_radio"
            android:drawableTop="@drawable/mall_account_bg"
            android:text="征集"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <View style="@style/main_footer_bar_view"/>

        <View style="@style/main_footer_bar_view"/>

        <View style="@style/main_footer_bar_view"/>

        <View style="@style/main_footer_bar_view"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/px50"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_hunt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_subscribe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_trade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
