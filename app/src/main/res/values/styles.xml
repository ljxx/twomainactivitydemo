<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--<item name="android:layout_width">0dp</item>-->
    <!--<item name="android:layout_height">match_parent</item>-->
    <!--<item name="android:layout_weight">1</item>-->
    <style name="footer_bar">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="mall_footer_bar_radio" parent="footer_bar">
        <item name="android:paddingTop">@dimen/px4</item>
        <item name="android:paddingBottom">@dimen/px4</item>
        <item name="android:drawablePadding">@dimen/px3</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/mall_footer_text_color</item>
    </style>

    <style name="main_footer_bar_view">
        <item name="android:layout_width">@dimen/px0</item>
        <item name="android:layout_height">@dimen/px0</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
